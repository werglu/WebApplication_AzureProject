@model WebApplication1.ModelViews.JobApplicationViewModel

    @{
        ViewData["Title"] = "Index";
    }

    <h2>Application for: </h2>
    <h3 style="color:cornflowerblue">@ViewBag.JobName</h3>
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Index",
            "Apply",
            FormMethod.Post,
            new { enctype = "multipart/form-data" }))
            {   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Contact Agreement</label>
                        <input type="checkbox" asp-for="ContactAgreement" class="form-control" />
                        <span asp-validation-for="ContactAgreement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="file">CV</label>
                        <input type="file" name="file" id="file" /><br />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Apply now" class="btn btn-primary" style="background-color:red;border-color:brown" />
                    </div>
            }
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }